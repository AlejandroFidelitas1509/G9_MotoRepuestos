@model G9MotoRepuestos.Models.Finanzas

@{
    ViewData["Title"] = "Nuevo Movimiento";
}

<div class="container">
    <h2 class="titulo">Nuevo Movimiento</h2>

    <form asp-action="Create" method="post" class="card">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="All" class="text-danger"></div>

        <label class="label">Fecha</label>
        <input type="date" asp-for="Fecha" class="input" />

        <label class="label">Tipo</label>
        <select asp-for="Tipo" class="input">
            <option value="Ingreso">Ingreso</option>
            <option value="Egreso">Egreso</option>
        </select>

        <label class="label">Categoría</label>
        <input asp-for="Categoria" class="input" placeholder="Ej: Ventas, Insumos, Transporte" />

        <label class="label">Descripción</label>
        <input asp-for="Descripcion" class="input" placeholder="Ej: Venta #001" />

        <label class="label">Monto</label>
        <input asp-for="Monto" class="input" type="number" step="0.01" min="0" />

        <button class="btn-rojo" type="submit">Guardar</button>

        <a asp-action="Index" class="btn-gray" style="display:inline-block;text-align:center;margin-top:10px;">
            Cancelar
        </a>
    </form>
</div>

<style>
    .container {
        max-width: 700px;
        margin: 30px auto;
        background: #fff;
        padding: 25px;
        border-radius: 15px;
        box-shadow: 0 0 10px rgba(0,0,0,.10);
    }

    .titulo {
        text-align: center;
        font-size: 28px;
        margin-bottom: 25px;
        color: #262626;
        font-weight: bold;
    }

    .card {
        background: #f3f4f6;
        padding: 20px;
        border-radius: 12px;
        margin-bottom: 25px;
        border: 1px solid #d4d4d8;
    }

    .label {
        font-weight: 600;
        color: #333;
        display: block;
        margin-bottom: 5px;
    }

    .input {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: 1px solid #cfcfcf;
        background: #fff;
        margin-bottom: 15px;
        font-size: 15px;
    }

    .btn-rojo {
        width: 100%;
        background: #dc2626;
        color: #fff;
        padding: 12px;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: .2s;
        font-size: 16px;
        font-weight: bold;
    }

        .btn-rojo:hover {
            background: #b91c1c;
        }

    .btn-gray {
        width: 100%;
        background: #6b7280;
        color: white;
        padding: 12px 18px;
        text-decoration: none;
        border-radius: 10px;
        font-size: 15px;
        font-weight: bold;
        transition: .2s;
    }

        .btn-gray:hover {
            background: #4b5563;
        }
</style>
