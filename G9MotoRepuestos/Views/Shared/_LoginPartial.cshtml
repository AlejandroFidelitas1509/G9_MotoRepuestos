<ul class="navbar-nav align-items-center">
    @if (User?.Identity != null && User.Identity.IsAuthenticated)
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white fw-bold" href="#" id="userMenu" data-bs-toggle="dropdown">
                <i class="fas fa-user-circle me-1"></i> @User.Identity.Name
            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow border-0">
                <li>

                    <a class="dropdown-item small text-dark" asp-controller="Usuarios" asp-action="EditarPerfil">
                        <i class="fas fa-user-edit me-2 text-primary"></i>Editar Perfil
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>

                    <a class="dropdown-item small text-dark" asp-controller="Usuarios" asp-action="Logout">
                        <i class="fas fa-sign-out-alt me-2 text-danger"></i>Cerrar Sesión
                    </a>
                </li>
            </ul>
        </li>
    }
    else
    {

        <li class="nav-item">
            <a class="nav-link text-white fw-bold px-3" asp-controller="Usuarios" asp-action="Login">
                Iniciar Sesión
            </a>
        </li>


        <li class="nav-item">
            <a class="nav-link text-danger fw-bold bg-white rounded-pill px-3 ms-lg-2 shadow-sm"
               asp-controller="Usuarios" asp-action="Registro">
                Registrarse
            </a>
        </li>
    }

</ul>


