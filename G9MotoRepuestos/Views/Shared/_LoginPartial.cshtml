@using System.Security.Claims
<ul class="navbar-nav align-items-center">
    @if (User?.Identity != null && User.Identity.IsAuthenticated)
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white fw-bold px-3"
               href="javascript:void(0)"
               id="userMenu"
               data-bs-toggle="dropdown"
               aria-expanded="false">
                <i class="fas fa-user-circle me-1"></i> @User.Identity.Name
            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow border-0 rounded-3 mt-2">
                <li><a class="dropdown-item py-2" asp-controller="Usuarios" asp-action="Perfil">Mi Perfil</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item py-2 text-danger fw-bold" asp-controller="Usuarios" asp-action="Logout">Cerrar Sesión</a></li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-white fw-bold px-3" asp-controller="Usuarios" asp-action="Login">Iniciar Sesión</a>
        </li>
        <li class="nav-item">
            @* Se eliminó el borde blanco usando border-0 y se aplicó tu variable de color *@
            <a class="nav-link fw-bold bg-white rounded-pill px-4 ms-lg-2 shadow-sm border-0"
               asp-controller="Usuarios" asp-action="Registro"
               style="color: var(--rojo-rojas) !important; border: none !important;">
                Registrarse
            </a>
        </li>
    }
</ul>