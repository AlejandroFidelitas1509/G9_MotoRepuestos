                <div class="sidebar-footer">
                    <a asp-controller="Home" asp-action="Nosotros" class="list-group-item list-group-item-action bg-dark text-white sidebar-link">
                        <i class="fas fa-info-circle me-2 text-info"></i> Sobre Nosotros
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark text-white pt-4 pb-2 border-top border-danger border-4 mt-auto">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-4 text-center text-md-start mb-3 mb-md-0">
                    <h6 class="text-uppercase fw-bold text-danger mb-1 small">Moto Repuestos Rojas</h6>
                    <p class="small text-secondary mb-0" style="font-size: 0.75rem;">Calidad y asesoría honesta en Mercedes Norte desde 2024.</p>
                </div>
                <div class="col-md-5 text-center mb-3 mb-md-0">
                    <div class="d-inline-block text-start">
                        <p class="small mb-0" style="font-size: 0.8rem;"><i class="fas fa-map-marker-alt text-danger me-2"></i>Mercedes Norte, Heredia</p>
                        <p class="small mb-0" style="font-size: 0.8rem;"><i class="fab fa-whatsapp text-success me-2"></i>+506 7243-2805</p>
                    </div>
                </div>
                <div class="col-md-3 text-center text-md-end">
                    <a href="https://wa.me/50672432805" target="_blank" class="social-icon-sm me-2"><i class="fab fa-whatsapp"></i></a>
                    <a href="https://www.facebook.com/share/1831P2NdY6/" target="_blank" class="social-icon-sm me-2"><i class="fab fa-facebook-f"></i></a>
                    <a href="https://www.instagram.com/motorepuestosrojas" target="_blank" class="social-icon-sm"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
            <hr class="my-3 border-secondary opacity-25">
            <div class="row pb-2">
                <div class="col-12 text-center">
                    <p class="mb-0 text-secondary" style="font-size: 0.7rem;">© 2026 <strong>Moto Repuestos Rojas</strong>. Pasión por las motos.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>