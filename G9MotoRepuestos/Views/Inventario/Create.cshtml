@using MR.Abstracciones.EntidadesParaUI
@model ProductoDto

@{
    ViewData["Title"] = "Crear Producto";
}

<div class="usuarios-container">
    <h2 class="titulo-rojo">Crear Producto</h2>

    <!-- ✅ FORM REAL -->
    <form asp-action="Create" method="post" class="form-usuario">
        @Html.AntiForgeryToken()

        <div class="form-row">
            <label>Nombre:</label>
            <input asp-for="Nombre" type="text" class="input-text" placeholder="Nombre del producto" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label>Precio venta:</label>
            <input asp-for="PrecioVenta" type="number" step="0.01" class="input-text" placeholder="Precio venta" />
            <span asp-validation-for="PrecioVenta" class="text-danger"></span>
        </div>

        <div class="form-row">
            <label>Marca:</label>
            <input asp-for="Marca" type="text" class="input-text" placeholder="Marca" />
            <span asp-validation-for="Marca" class="text-danger"></span>
        </div>

        <!-- ⚠️ Stock inicial NO se guarda aún porque es Inventario, no Productos -->
        <div class="form-row">
            <label>Stock inicial:</label>
            <input type="number" class="input-text" placeholder="Cantidad en stock (se guardará después)" disabled />
            <small class="text-muted">* Por ahora solo se guarda el producto. El stock se implementa después.</small>
        </div>

        <!-- Campos opcionales (si quieres irlos agregando ya) -->
        <div class="form-row">
            <label>Precio costo (opcional):</label>
            <input asp-for="PrecioCosto" type="number" step="0.01" class="input-text" placeholder="Precio costo" />
        </div>

        <div class="form-row">
            <label>Código de barras (opcional):</label>
            <input asp-for="CodigoBarras" type="text" class="input-text" placeholder="Código de barras" />
        </div>

        <div class="form-row">
            <label>Descripción (opcional):</label>
            <input asp-for="Descripcion" type="text" class="input-text" placeholder="Descripción" />
        </div>

        <div class="form-row">
            <label>URL Imagen (opcional):</label>
            <input asp-for="ImageURL" type="text" class="input-text" placeholder="https://..." />
        </div>

        <div class="acciones-form">
            <!-- ✅ Guardar envía el POST -->
            <button type="submit" class="btn-guardar">Guardar</button>

            <!-- Cancelar solo navega -->
            <a asp-action="Index" class="btn-cancelar">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        background-color: #f2f2f2;
        color: #222;
    }

    .usuarios-container {
        margin: 30px auto;
        max-width: 900px;
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 2px 6px rgba(0,0,0,0.2);
    }

    .titulo-rojo {
        color: #d32f2f;
        text-align: center;
        margin-bottom: 20px;
    }

    .form-usuario {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .form-row {
        flex: 1 1 45%;
        display: flex;
        flex-direction: column;
    }

    .input-text {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 5px;
        transition: border-color 0.3s;
    }

        .input-text:hover {
            border-color: #d32f2f;
        }

    .acciones-form {
        width: 100%;
        margin-top: 20px;
    }

    .btn-guardar {
        background-color: #d32f2f;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
    }

        .btn-guardar:hover {
            background-color: #b71c1c;
            text-decoration: none;
        }

    .btn-cancelar {
        background-color: #333;
        color: #fff;
        padding: 10px 15px;
        text-decoration: none;
        border-radius: 5px;
        margin-left: 10px;
    }

        .btn-cancelar:hover {
            background-color: #555;
            text-decoration: none;
        }
</style>
