        color: #6c757d;
        font-weight: 700;
        letter-spacing: .06em;
        text-transform: uppercase;
        font-size: .8rem;
    }

    .cp-title {
        color: #d32f2f;
        font-weight: 900;
        letter-spacing: -0.02em;
    }

    .cp-sub {
        color: #6c757d;
    }

    .cp-card-header {
        background: #222;
    }

    .cp-header-hint {
        color: rgba(255,255,255,.75);
        font-size: .85rem;
        font-weight: 600;
    }

    .cp-section-title {
        font-weight: 900;
        color: #111;
        font-size: 1rem;
    }

    .cp-section-sub {
        color: #6c757d;
        font-size: .9rem;
    }

    .cp-label {
        font-weight: 700;
        color: #333;
    }

    .cp-input {
        border-radius: 12px;
        padding: .65rem .85rem;
        border-color: rgba(0,0,0,.15);
    }

        .cp-input:focus {
            border-color: rgba(211,47,47,.45);
            box-shadow: 0 0 0 .2rem rgba(211,47,47,.15);
        }

    .cp-btn {
        border-radius: 12px;
        padding: .6rem 1rem;
        font-weight: 800;
    }

    .cp-btn-sm {
        border-radius: 12px;
        font-weight: 800;
        padding: .55rem .9rem;
        white-space: nowrap;
    }

    .btn-danger {
        background-color: #d32f2f !important;
        border: none !important;
    }

        .btn-danger:hover {
            background-color: #b71c1c !important;
        }

    .btn-dark {
        background-color: #222 !important;
        border: none !important;
    }

        .btn-dark:hover {
            background-color: #444 !important;
        }

    .btn-outline-dark {
        border-radius: 12px;
        font-weight: 800;
    }

    .cp-side {
        background: #fff;
        border: 1px solid rgba(0,0,0,.06);
    }

    .cp-side-title {
        font-weight: 900;
        color: #111;
    }

    .cp-side-sub {
        color: #6c757d;
        font-size: .9rem;
    }

    .cp-hr {
        margin: 16px 0;
        border-color: rgba(0,0,0,.08);
    }

    .cp-preview-label {
        font-weight: 800;
        color: #111;
        margin-bottom: 6px;
    }

    .cp-preview-box {
        border: 1px dashed rgba(0,0,0,.18);
        border-radius: 16px;
        height: 210px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(0,0,0,.02);
        overflow: hidden;
    }

    #previewImg {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .cp-preview-empty {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 900;
        color: #d32f2f;
        background: rgba(211,47,47,.06);
    }
</style>
