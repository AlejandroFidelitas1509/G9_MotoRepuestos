@using MR.Abstracciones.EntidadesParaUI
@using Microsoft.AspNetCore.Mvc.Rendering
@model ProductoDto

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="cp-wrap">

    <div class="cp-hero rounded-4 shadow-sm p-4 mb-4">
        <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3">
            <div>
                <div class="cp-kicker">Inventario</div>
                <h1 class="cp-title m-0">Editar Producto</h1>
                <div class="cp-sub mt-2">Actualiza la información del producto y guarda los cambios.</div>
            </div>

            <div class="d-flex gap-2 flex-wrap">
                <a asp-action="Index" class="btn btn-outline-dark cp-btn">← Volver</a>
                <a asp-controller="Categorias" asp-action="Index" class="btn btn-dark cp-btn">Categorías</a>
            </div>
        </div>
    </div>

    <div class="card border-0 rounded-4 shadow-sm overflow-hidden">
        <div class="cp-card-header p-3 px-4">
            <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">
                <div class="fw-bold text-white">Editar datos del producto</div>
                <div class="cp-header-hint">ID: @Model.IdProducto</div>
            </div>
        </div>

        <div class="card-body p-4">
            <form asp-action="Edit" method="post" enctype="multipart/form-data" class="cp-form">
                @Html.AntiForgeryToken()
                <input asp-for="IdProducto" type="hidden" />
                <input asp-for="ImageURL" type="hidden" /> @* mantiene la url si no cambias imagen *@

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-4">
                    <div class="col-12 col-lg-7">
                        <div class="cp-section mb-4">
                            <div class="cp-section-title">Información básica</div>
                            <div class="cp-section-sub">Nombre, marca y descripción.</div>

                            <div class="row g-3 mt-1">
                                <div class="col-12">
                                    <label asp-for="Nombre" class="form-label cp-label">Nombre *</label>
                                    <input asp-for="Nombre" class="form-control cp-input" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Marca" class="form-label cp-label">Marca *</label>
                                    <input asp-for="Marca" class="form-control cp-input" />
                                    <span asp-validation-for="Marca" class="text-danger"></span>
                                </div>

                                <div class="col-12">
                                    <label asp-for="Descripcion" class="form-label cp-label">Descripción (opcional)</label>
                                    <textarea asp-for="Descripcion" class="form-control cp-input" rows="3"></textarea>
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="cp-section">
                            <div class="cp-section-title">Precios y stock</div>
                            <div class="cp-section-sub">Costo, venta, stock y código de barras.</div>

                            <div class="row g-3 mt-1">
                                <div class="col-12 col-md-4">
                                    <label asp-for="PrecioCosto" class="form-label cp-label">Precio costo</label>
                                    <input asp-for="PrecioCosto" class="form-control cp-input" />
                                    <span asp-validation-for="PrecioCosto" class="text-danger"></span>
                                </div>

                                <div class="col-12 col-md-4">
                                    <label asp-for="PrecioVenta" class="form-label cp-label">Precio venta *</label>
                                    <input asp-for="PrecioVenta" class="form-control cp-input" />
                                    <span asp-validation-for="PrecioVenta" class="text-danger"></span>
                                </div>

                                <div class="col-12 col-md-4">
                                    <label asp-for="StockActual" class="form-label cp-label">Stock *</label>
                                    <input asp-for="StockActual" class="form-control cp-input" />
                                    <span asp-validation-for="StockActual" class="text-danger"></span>
                                </div>

                                <div class="col-12">
                                    <label asp-for="CodigoBarras" class="form-label cp-label">Código de barras</label>
                                    <input asp-for="CodigoBarras" class="form-control cp-input" />
                                    <span asp-validation-for="CodigoBarras" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12 col-lg-5">
                        <div class="cp-side card border-0 rounded-4 p-3 shadow-sm">
                            <div class="cp-side-title">Categoría e imagen</div>
                            <div class="cp-side-sub">Puedes cambiar la categoría y la imagen.</div>

                            <div class="mt-3">
                                <label asp-for="IdCategoria" class="form-label cp-label">Categoría</label>
                                <div class="d-flex gap-2">
                                    <select asp-for="IdCategoria" class="form-select cp-input"
                                            asp-items="(IEnumerable<SelectListItem>)ViewBag.Categorias">
                                        <option value="">-- Seleccione --</option>
                                    </select>

                                    <a asp-controller="Categorias" asp-action="Create" class="btn btn-dark cp-btn-sm">Nueva</a>
                                </div>
                                <span asp-validation-for="IdCategoria" class="text-danger"></span>
                            </div>

                            <hr class="cp-hr" />

                            <div>
                                <label class="form-label cp-label">Imagen (opcional)</label>
                                <input name="imagen" id="imagenInput" type="file" class="form-control cp-input" accept="image/*" />

                                <div class="cp-preview mt-3">
                                    <div class="cp-preview-label">Vista previa</div>
                                    <div class="cp-preview-box">
                                        <img id="previewImg" alt="preview"
                                             src="@(string.IsNullOrWhiteSpace(Model.ImageURL) ? "" : Model.ImageURL)"
                                             style="@(string.IsNullOrWhiteSpace(Model.ImageURL) ? "display:none;" : "display:block;")" />
                                        <div id="previewEmpty" class="cp-preview-empty"
                                             style="@(string.IsNullOrWhiteSpace(Model.ImageURL) ? "display:flex;" : "display:none;")">
                                            Sin imagen
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2 mt-4">
                    <a asp-action="Index" class="btn btn-dark cp-btn">Cancelar</a>
                    <button type="submit" class="btn btn-danger cp-btn">Guardar cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    const input = document.getElementById('imagenInput');
    const img = document.getElementById('previewImg');
    const empty = document.getElementById('previewEmpty');

    if (input) {
        input.addEventListener('change', () => {
            const file = input.files && input.files[0];
            if (!file || !file.type.startsWith('image/')) {
                return;
            }
            const url = URL.createObjectURL(file);
            img.src = url;
            img.style.display = 'block';
            empty.style.display = 'none';
        });
    }
</script>

