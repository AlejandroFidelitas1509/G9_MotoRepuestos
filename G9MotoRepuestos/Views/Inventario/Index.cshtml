@using MR.Abstracciones.EntidadesParaUI
@model IEnumerable<ProductoDto>

@{
    ViewData["Title"] = "Inventario de Repuestos";
}

<h1 class="text-danger">@ViewData["Title"]</h1>
<hr />

<div class="mb-3">
    <a asp-action="Create" class="btn btn-danger">Crear Producto</a>
</div>

<a asp-action="BitacoraEventos" class="btn btn-danger mb-3">Ver Bitácora</a>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Id Producto</th>
                <th>Nombre</th>
                <th>Stock</th>
                <th>Precio</th>
                <th>Acciones</th>
                <th>Imagen</th>
            </tr>
        </thead>

        <tbody>
            @if (Model == null || !Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center">No hay productos registrados.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdProducto</td>
                        <td>@item.Nombre</td>
                        <td>@(item.StockActual ?? 0)</td>
                        <td>@(item.PrecioVenta?.ToString("C0") ?? "₡0")</td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdProducto" class="btn btn-sm btn-danger">Editar</a>

                            <button type="button"
                                    class="btn btn-sm btn-dark"
                                    data-bs-toggle="modal"
                                    data-bs-target="#modalEliminarProducto-@item.IdProducto">
                                Eliminar
                            </button>
                        </td>

                        <td>
                            @if (!string.IsNullOrWhiteSpace(item.ImageURL))
                            {
                                <img src="@item.ImageURL"
                                     alt="Imagen"
                                     style="width:60px;height:60px;object-fit:cover;border-radius:8px;" />
                            }
                            else
                            {
                                <span>-</span>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    @* Modales fuera de la tabla *@
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="modal fade"
                 id="modalEliminarProducto-@item.IdProducto"
                 tabindex="-1"
                 aria-labelledby="modalEliminarProductoLabel-@item.IdProducto"
                 aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <div class="modal-header bg-dark text-white">
                            <h5 class="modal-title" id="modalEliminarProductoLabel-@item.IdProducto">Confirmar Eliminación</h5>
                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>

                        <div class="modal-body">
                            <p class="text-danger fw-bold">¿Está seguro que desea eliminar este producto?</p>
                            <ul class="list-group">
                                <li class="list-group-item"><strong>Id:</strong> @item.IdProducto</li>
                                <li class="list-group-item"><strong>Nombre:</strong> @item.Nombre</li>
                                <li class="list-group-item"><strong>Stock:</strong> @(item.StockActual ?? 0)</li>
                                <li class="list-group-item"><strong>Precio:</strong> @(item.PrecioVenta?.ToString("C0") ?? "₡0")</li>
                            </ul>
                        </div>

                        <div class="modal-footer">
                            <form asp-action="Delete" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.IdProducto" />
                                <button type="submit" class="btn btn-danger">Eliminar</button>
                            </form>

                            <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Cancelar</button>
                        </div>

                    </div>
                </div>
            </div>
        }
    }
</div>


<style>
    h1 {
        font-weight: bold;
        margin-bottom: 20px;
    }

    table {
        border: 1px solid #333;
    }

    thead {
        background-color: #333;
        color: #fff;
    }

    tbody tr:hover {
        background-color: #f2f2f2;
    }

    td, th {
        text-align: center;
        vertical-align: middle;
    }

    tbody td:hover {
        color: #d32f2f;
    }

    .btn-danger {
        background-color: #d32f2f !important;
        border: none;
        font-weight: bold;
    }

        .btn-danger:hover {
            background-color: #b71c1c !important;
        }

    .btn-dark {
        background-color: #333 !important;
        color: #fff !important;
    }

        .btn-dark:hover {
            background-color: #555 !important;
        }
</style>
