@using MR.Abstracciones.EntidadesParaUI;
@model IEnumerable<BitacoraProductosDto>

@{
    ViewData["Title"] = "Bitácora de Productos";
}

<h1 class="text-danger">@ViewData["Title"]</h1>
<hr />

<div class="mb-3">
    <a asp-action="Index" class="btn btn-dark">Volver al Inventario</a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Acción</th>
                <th>Tabla</th>
                <th>IdUsuario</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null || !Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center">No hay eventos registrados.</td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdBitacora</td>
                        <td>@(item.Fecha?.ToString("yyyy-MM-dd HH:mm") ?? "-")</td>
                        <td>@item.Accion</td>
                        <td>@item.TablaAfectada</td>
                        <td>@(item.IdUsuario?.ToString() ?? "N/A")</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<style>
    h1 {
        font-weight: bold;
        margin-bottom: 20px;
    }

    table {
        border: 1px solid #333;
    }

    thead {
        background-color: #333;
        color: #fff;
    }

    tbody tr:hover {
        background-color: #f2f2f2;
    }

    td, th {
        text-align: center;
        vertical-align: middle;
    }

    .btn-dark {
        background-color: #333 !important;
        color: #fff !important;
    }

        .btn-dark:hover {
            background-color: #555 !important;
        }
</style>