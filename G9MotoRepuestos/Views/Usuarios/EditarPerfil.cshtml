@model G9MotoRepuestos.Models.Usuario
@{
    ViewData["Title"] = "Editar Perfil";
    var userRole = User.Claims.FirstOrDefault(c => c.Type == "Role" || c.Type == System.Security.Claims.ClaimTypes.Role)?.Value;
    bool esAdmin = string.Equals(userRole, "Admin", StringComparison.OrdinalIgnoreCase);
}

<link rel="stylesheet" href="~/css/usuarios/EditarPerfil.css" asp-append-version="true" />

<div class="edit-page-wrapper">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-lg card-editar-perfil">

                    <div class="profile-header-edit">
                        <h4 class="mb-0 fw-bold text-white">CONFIGURACIÓN DE PERFIL</h4>
                    </div>

                    <div class="card-body p-4 p-md-5">
                        <form asp-action="EditarPerfil" method="post" enctype="multipart/form-data">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="IdUsuario" />

                            @if (!esAdmin)
                            {
                                <input type="hidden" asp-for="IdRol" />
                                <input type="hidden" asp-for="Estado" />
                            }

                            <div class="text-center mb-4">
                                <div class="position-relative d-inline-block profile-avatar-container">
                                    <img id="imgPreview" src="@(string.IsNullOrEmpty(Model.ImagenURL) ? "/images/default-avatar.png" : Model.ImagenURL)"
                                         class="preview-img shadow" style="width: 130px; height: 130px; object-fit: cover;" />

                                    <div class="drop-zone" id="dropZone">
                                        <i class="fas fa-camera text-muted small"></i>
                                        <p class="mb-0 small text-muted fw-bold">Cambiar foto</p>
                                        <input type="file" name="fotoArchivo" id="fotoArchivo" hidden accept="image/*" />
                                    </div>
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-12">
                                    <label class="label-small fw-bold text-muted">NOMBRE COMPLETO</label>
                                    <input asp-for="NombreCompleto" class="form-control rounded-pill px-3" required />
                                </div>

                                <div class="col-12">
                                    <label class="label-small fw-bold text-muted">CORREO ELECTRÓNICO</label>
                                    <input asp-for="Correo" type="email" class="form-control rounded-pill px-3" required />
                                </div>

                                <div class="col-sm-6">
                                    <label class="label-small fw-bold text-muted">TELÉFONO</label>
                                    <input asp-for="Telefono" class="form-control rounded-pill px-3" />
                                </div>

                                <div class="col-sm-6">
                                    <label class="label-small fw-bold text-muted">NUEVA CONTRASEÑA</label>
                                    <input name="NuevaPassword" type="password" class="form-control rounded-pill px-3" placeholder="Omitir para no cambiar" />
                                </div>

                                @if (esAdmin)
                                {
                                    <div class="col-sm-6">
                                        <label class="label-small fw-bold text-muted">ROL</label>
                                        <select asp-for="IdRol" class="form-select rounded-pill px-3" asp-items="ViewBag.Roles"></select>
                                    </div>
                                    <div class="col-sm-6">
                                        <label class="label-small fw-bold text-muted">ESTADO</label>
                                        <select asp-for="Estado" class="form-select rounded-pill px-3">
                                            <option value="true">Activo</option>
                                            <option value="false">Inactivo</option>
                                        </select>
                                    </div>
                                }
                            </div>

                            <div class="d-grid gap-2 mt-5">
                                <button type="submit" class="btn btn-danger text-white fw-bold py-2 rounded-pill shadow">
                                    <i class="fas fa-save me-2"></i>GUARDAR CAMBIOS
                                </button>
                                <a asp-action="Perfil" class="btn btn-link text-muted text-decoration-none small">
                                    Cancelar y volver
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/usuarios/EditarPerfil.js" asp-append-version="true"></script>
}