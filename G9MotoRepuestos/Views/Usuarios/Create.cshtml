@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="usuarios-container">
    <h2 class="titulo-rojo">Crear Usuario</h2>

    <form class="form-usuario">
        <div class="form-row">
            <label>Nombre:</label>
            <input type="text" class="input-text" />
        </div>
        <div class="form-row">
            <label>Correo:</label>
            <input type="email" class="input-text" />
        </div>
        <div class="form-row">
            <label>Apellido:</label>
            <input type="text" class="input-text" />
        </div>
        <div class="form-row">
            <label>Telefono:</label>
            <input type="text" class="input-text" />
        </div>
        <div class="form-row">
            <label>Rol:</label>
            <select class="input-text">
                <option>Administrador</option>
                <option>Usuario</option>
            </select>
        </div>

        <div class="acciones-form">
            <button type="submit" class="btn-guardar">Guardar</button>
            <a href="/Usuarios" class="btn-cancelar">Cancelar</a>
        </div>
    </form>
</div>

<style>
    .titulo-rojo {
        color: #d32f2f; /* rojo fuerte */
        text-align: center;
        margin-bottom: 20px;
    }

    .form-usuario {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .form-row {
        flex: 1 1 45%;
        display: flex;
        flex-direction: column;
    }

    .input-text {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 5px;
        transition: border-color 0.3s;
    }

        /* Hover en los campos */
        .input-text:hover {
            border-color: #d32f2f;
        }

    .acciones-form {
        width: 100%;
        margin-top: 20px;
    }

    .btn-guardar {
        background-color: #d32f2f;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
    }

        .btn-guardar:hover {
            background-color: #b71c1c; /* rojo más oscuro */
        }

    .btn-cancelar {
        background-color: #333;
        color: #fff;
        padding: 10px 15px;
        text-decoration: none;
        border-radius: 5px;
        margin-left: 10px;
    }

        .btn-cancelar:hover {
            background-color: #555;
        }
</style>