@{
    ViewData["Title"] = "Ingresar - Moto Repuestos Rojas";
}

<div class="auth-wrapper shadow-lg">
    <div class="col-md-5 col-lg-4 px-3">
        <div class="card glass-card border-0 rounded-4 shadow-lg">
            <div class="card-body p-4 p-md-5">
                <div class="text-center mb-4">
                    <div class="bg-white d-inline-block p-3 rounded-circle mb-3 shadow">
                        <i class="fas fa-motorcycle fa-2x text-danger"></i>
                    </div>
                    <h2 class="fw-bold text-white">Bienvenido</h2>
                    <p class="text-light-muted small">Acceso para clientes y personal</p>
                </div>

                @* --- MENSAJE DE ÉXITO TRAS REGISTRO --- *@
                @if (TempData["Mensaje"] != null)
                {
                    <div class="alert alert-success py-2 small border-0 shadow-sm mb-3" style="background: rgba(40, 167, 69, 0.8); color: white;">
                        <i class="fas fa-check-circle me-2"></i>@TempData["Mensaje"]
                    </div>
                }

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger py-2 small border-0 shadow-sm mb-3" style="background: rgba(220, 53, 69, 0.8); color: white;">
                        <i class="fas fa-exclamation-circle me-2"></i>@ViewBag.Error
                    </div>
                }

                <form asp-action="Login" asp-controller="Usuarios" method="post">
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-white">Correo Electrónico</label>
                        <input type="email" name="correo" class="form-control rounded-pill form-control-custom" placeholder="ejemplo@rojas.com" required>
                    </div>
                    <div class="mb-4">
                        <label class="form-label small fw-bold text-white">Contraseña</label>
                        <input type="password" name="password" class="form-control rounded-pill form-control-custom" placeholder="••••••••" required>
                    </div>
                    <button type="submit" class="btn btn-rojas-auth text-white w-100 rounded-pill py-2 fw-bold shadow">
                        INGRESAR
                    </button>
                </form>

                <div class="text-center mt-4 border-top border-light pt-3">
                    <p class="small text-white mb-1">¿No tienes cuenta aún?</p>
                    <a asp-action="Registro" class="text-warning fw-bold text-decoration-none small">
                        Regístrate aquí
                    </a>
                </div>

                <div class="text-center mt-3">
                    <a asp-controller="Home" asp-action="Index" class="text-light-muted small text-decoration-none">
                        <i class="fas fa-arrow-left me-1"></i> Volver al Catálogo
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>