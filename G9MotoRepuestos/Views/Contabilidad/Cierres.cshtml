@{
    ViewData["Title"] = "Cierres Contables";
}

<div class="container">
    <h2 class="titulo">Cierres Contables</h2>

    <!-- MENSAJES -->
    @if (TempData["Error"] != null)
    {
        <div class="msg msg-error">
            @TempData["Error"]
        </div>
    }
    @if (TempData["Warning"] != null)
    {
        <div class="msg msg-warning">
            @TempData["Warning"]
        </div>
    }
    @if (TempData["Ok"] != null)
    {
        <div class="msg msg-ok">
            @TempData["Ok"]
        </div>
    }

    <!-- Selector del tipo de cierre -->
    <div class="card">
        <label class="label">Tipo de cierre</label>
        <select id="tipoCierre" class="input" onchange="cambiarFormulario()">
            <option value="diario">Diario</option>
            <option value="semanal">Semanal</option>
            <option value="mensual">Mensual</option>
        </select>
    </div>

    <!-- FORMULARIO DIARIO -->
    <form method="post" asp-action="RealizarCierre" asp-controller="Contabilidad" id="formDiario" class="card">
        @Html.AntiForgeryToken()

        <h3 class="subtitulo">Cierre Diario</h3>

        <label class="label">Fecha</label>
        <input type="date" name="fecha" class="input" required />

        <input type="hidden" name="tipo" value="diario" />

        <button class="btn-rojo" type="submit">Realizar cierre diario</button>
    </form>

    <!-- FORMULARIO SEMANAL -->
    <form method="post" asp-action="RealizarCierre" asp-controller="Contabilidad" id="formSemanal" class="card" style="display:none;">
        @Html.AntiForgeryToken()

        <h3 class="subtitulo">Cierre Semanal</h3>

        <label class="label">Fecha inicio</label>
        <input type="date" name="fechaInicio" class="input" required />

        <label class="label">Fecha fin</label>
        <input type="date" name="fechaFin" class="input" required />

        <input type="hidden" name="tipo" value="semanal" />

        <button class="btn-rojo" type="submit">Realizar cierre semanal</button>
    </form>

    <!-- FORMULARIO MENSUAL -->
    <form method="post" asp-action="RealizarCierre" asp-controller="Contabilidad" id="formMensual" class="card" style="display:none;">
        @Html.AntiForgeryToken()

        <h3 class="subtitulo">Cierre Mensual</h3>

        <label class="label">Mes</label>
        <input type="month" name="fechaInicio" class="input" required />

        <input type="hidden" name="tipo" value="mensual" />

        <button class="btn-rojo" type="submit">Realizar cierre mensual</button>
    </form>

    <!-- BOTONES DE NAVEGACIÓN ABAJO -->
    <div class="botones">
        <a asp-controller="Contabilidad" asp-action="Index" class="btn-gray">Volver al menú</a>
        <a asp-controller="Contabilidad" asp-action="Historial" class="btn-gray">Historial de cierres</a>
    </div>
</div>

<!-- SCRIPT -->
<script>
    function cambiarFormulario() {
        var tipo = document.getElementById("tipoCierre").value;

        document.getElementById("formDiario").style.display = tipo === "diario" ? "block" : "none";
        document.getElementById("formSemanal").style.display = tipo === "semanal" ? "block" : "none";
        document.getElementById("formMensual").style.display = tipo === "mensual" ? "block" : "none";
    }
</script>

<!-- ESTILOS -->
<style>
    .container {
        max-width: 700px;
        margin: 30px auto;
        background: #ffffff;
        padding: 25px;
        border-radius: 15px;
        box-shadow: 0 0 10px rgba(0,0,0,.10);
    }

    .titulo {
        text-align: center;
        font-size: 28px;
        margin-bottom: 25px;
        color: #262626;
        font-weight: bold;
    }

    .subtitulo {
        font-size: 20px;
        margin-bottom: 15px;
        color: #404040;
        font-weight: 600;
    }

    .card {
        background: #f3f4f6;
        padding: 20px;
        border-radius: 12px;
        margin-bottom: 20px;
        border: 1px solid #d4d4d8;
    }

    .label {
        font-weight: 600;
        color: #333;
        display: block;
        margin-bottom: 5px;
    }

    .input {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: 1px solid #cfcfcf;
        background: #ffffff;
        margin-bottom: 15px;
        font-size: 15px;
    }

    .btn-rojo {
        width: 100%;
        background: #dc2626;
        color: white;
        padding: 12px;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        transition: .2s;
        font-size: 16px;
        font-weight: bold;
    }

        .btn-rojo:hover {
            background: #b91c1c;
        }

    .botones {
        display: flex;
        justify-content: space-between;
        gap: 10px;
        flex-wrap: wrap;
    }

    .btn-gray {
        background: #6b7280;
        color: white;
        padding: 12px 18px;
        text-decoration: none;
        border-radius: 10px;
        font-size: 15px;
        font-weight: bold;
        transition: .2s;
    }

        .btn-gray:hover {
            background: #4b5563;
        }

    /* MENSAJES */
    .msg {
        padding: 12px 14px;
        border-radius: 10px;
        margin-bottom: 15px;
        font-weight: 600;
        font-size: 14px;
        border: 1px solid transparent;
    }

    .msg-error {
        background: #fee2e2;
        color: #991b1b;
        border-color: #fecaca;
    }

    .msg-warning {
        background: #fef9c3;
        color: #854d0e;
        border-color: #fde68a;
    }

    .msg-ok {
        background: #dcfce7;
        color: #166534;
        border-color: #bbf7d0;
    }
</style>
