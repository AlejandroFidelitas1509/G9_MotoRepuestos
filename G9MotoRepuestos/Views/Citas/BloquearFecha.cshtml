@{
    ViewData["Title"] = "Bloquear Cita";
}

<div class="usuarios-container">
    <h2 class="titulo-rojo">Bloquear Fechas</h2>

    <div style="color:green;font-weight:bold;">
        Mensaje: La fecha ha sido bloqueada correctamente.
    </div>

    <form action="/Citas/BloquearFecha" method="post" class="form-usuario">
        <div class="form-row">
            <label>Seleccionar fecha a bloquear:</label>
            <input name="fecha" type="date" class="input-text" />
        </div>
        <div class="acciones-form">
            <button type="submit" class="btn-guardar">Bloquear fecha</button>
            <a href="/Citas/Index" class="btn-cancelar">Cancelar</a>
        </div>

      
    </form>

    <hr />
    <h4>Fechas bloqueadas</h4>
    <table style="width:100%; border-collapse:collapse;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fecha</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>05/12/2025</td>
                <td>
                    <form method="post" style="display:inline;">
                        <input type="hidden" name="id" value="1" />
                        <button href="#" type="submit" class="btn-cancelar">Desbloquear</button>
                    </form>
                </td>
            </tr>
            <tr>
                <td>2</td>
                <td>06/12/2025</td>
                <td>
                    <form method="post" style="display:inline;">
                        <input type="hidden" name="id" value="2" />
                        <button href="#" type="submit" class="btn-cancelar">Desbloquear</button>
                    </form>
                </td>
            </tr>
        </tbody>
    </table>

</div>

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        background-color: #f2f2f2;
        color: #222;
    }

    .usuarios-container {
        margin: 30px auto;
        max-width: 900px;
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 2px 6px rgba(0,0,0,0.2);
    }

    .titulo-rojo {
        color: #d32f2f;
        text-align: center;
        margin-bottom: 20px;
    }

    .form-usuario {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .form-row {
        flex: 1 1 45%;
        display: flex;
        flex-direction: column;
    }

    .input-text {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 5px;
        transition: border-color 0.3s;
    }

        .input-text:hover {
            border-color: #d32f2f;
        }

    .acciones-form {
        width: 100%;
        margin-top: 20px;
    }

    .btn-guardar {
        background-color: #d32f2f;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
    }

        .btn-guardar:hover {
            background-color: #b71c1c;
            text-decoration: none;
        }

    .btn-cancelar {
        background-color: #333;
        color: #fff;
        padding: 10px 15px;
        text-decoration: none;
        border-radius: 5px;
        margin-left: 10px;
    }

        .btn-cancelar:hover {
            background-color: #555;
            text-decoration: none;
        }

    table, th, td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: left;
    }
</style>