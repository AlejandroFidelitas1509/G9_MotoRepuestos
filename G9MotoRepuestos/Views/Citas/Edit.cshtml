
@{
    ViewData["Title"] = "Editar Cita";
}

<div class="usuarios-container">
    <h2 class="titulo-rojo">Editar Cita</h2>

    <form action="/Citas/Edit" method="post" class="form-usuario">

        <input type="hidden" name="Id" value="123" />

        <div class="text-danger"></div>

        <div class="form-row">
            <label>Cliente:</label>
            <input name="NombreCliente" value="Juan Pérez" class="input-text" />
            <span class="text-danger"></span>
        </div>

        <div class="form-row">
            <label>Descripción:</label>
            <input name="Descripcion" value="Cambio de aceite y revisión general" class="input-text" />
            <span class="text-danger"></span>
        </div>

        <div class="form-row">
            <label>Fecha y hora:</label>
            <input name="Fecha" type="datetime-local" value="2025-12-05T10:00" class="input-text" />
            <span class="text-danger"></span>
        </div>

        <div class="acciones-form">
            <button type="submit" class="btn-guardar">Guardar cambios</button>

            <a href="/Citas/Index" class="btn-cancelar">Cancelar</a>
        </div>
    </form>
</div>

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        background-color: #f2f2f2;
        color: #222;
    }

    .usuarios-container {
        margin: 30px auto;
        max-width: 900px;
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 2px 6px rgba(0,0,0,0.2);
    }

    .titulo-rojo {
        color: #d32f2f;
        text-align: center;
        margin-bottom: 20px;
    }

    .form-usuario {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .form-row {
        flex: 1 1 45%;
        display: flex;
        flex-direction: column;
    }

    .input-text {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 5px;
        transition: border-color 0.3s;
    }

        .input-text:hover {
            border-color: #d32f2f;
        }

    .acciones-form {
        width: 100%;
        margin-top: 20px;
    }

    .btn-guardar {
        background-color: #d32f2f;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
    }

        .btn-guardar:hover {
            background-color: #b71c1c;
            text-decoration: none;
        }

    .btn-cancelar {
        background-color: #333;
        color: #fff;
        padding: 10px 15px;
        text-decoration: none;
        border-radius: 5px;
        margin-left: 10px;
    }

        .btn-cancelar:hover {
            background-color: #555;
            text-decoration: none;
        }
</style>