<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        background-color: #f2f2f2;
        color: #222;
    }

    .usuarios-container {
        margin: 30px auto;
        max-width: 900px;
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0px 2px 6px rgba(0,0,0,0.2);
    }

    .titulo-rojo {
        color: #d32f2f;
        text-align: center;
        margin-bottom: 20px;
    }

    dl {
        display: grid;
        grid-template-columns: 150px 1fr;
        gap: 10px;
        margin-bottom: 30px;
        padding-left: 20px;
    }

    dt {
        font-weight: bold;
        color: #555;
    }

    dd {
        margin-left: 0;
        border-bottom: 1px solid #eee;
        padding-bottom: 5px;
    }

    .acciones-form {
        width: 100%;
        margin-top: 20px;
        padding-left: 20px;
    }

    .btn-guardar {
        background-color: #d32f2f;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        font-weight: bold;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
    }

        .btn-guardar:hover {
            background-color: #b71c1c;
            text-decoration: none;
        }

    .btn-cancelar {
        background-color: #333;
        color: #fff;
        padding: 10px 15px;
        text-decoration: none;
        border-radius: 5px;
        margin-left: 10px;
        display: inline-block;
    }

        .btn-cancelar:hover {
            background-color: #555;
            text-decoration: none;
        }
</style>