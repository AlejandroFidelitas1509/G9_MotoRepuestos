
@{
    ViewData["Title"] = "Detalles Cita";
}

<div class="usuarios-container">
    <h2 class="titulo-rojo">Detalle Cita</h2>

    <dl>
        <dt>Id</dt>
        <dd>1</dd>

        <dt>Cliente</dt>
        <dd>Carlos Monge</dd>

