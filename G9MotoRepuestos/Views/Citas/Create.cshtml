@{
    ViewData["Title"] = "Crear Cita";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
<link rel="stylesheet" href="~/css/CrearCitas.css" />

<div class="usuarios-container">
    <h2 class="titulo-rojo">Crear Cita  <i class="fas fa-calendar-check me-2 text-danger"></i></h2>

    <form action="/Citas/Create" method="post" class="form-usuario">
        <div class="text-danger"></div>

        <div class="form-row">
            <label>Cliente:</label>
            <input name="NombreCliente" class="input-text" placeholder="Nombre del cliente" />
            <span class="text-danger"></span>
        </div>

        <div class="form-row">
            <label>Descripción:</label>
            <input name="Descripcion" class="input-text" placeholder="Descripción de la cita" />
            <span class="text-danger"></span>
        </div>

        <div class="form-row">
            <label>Fecha y hora:</label>
            <input name="Fecha" type="datetime-local" class="input-text" />
            <span class="text-danger"></span>
        </div>

        <div class="acciones-form">
            <!-- Botón guardar con icono -->
            <button type="submit" class="btn-guardar">
                <i class="fa-solid fa-save"></i> Guardar
            </button>

            <!-- Botón cancelar con icono -->
            <a href="/Citas/Index" class="btn-cancelar">
                <i class="fa-solid fa-xmark"></i> Cancelar
            </a>
        </div>
    </form>
</div>


