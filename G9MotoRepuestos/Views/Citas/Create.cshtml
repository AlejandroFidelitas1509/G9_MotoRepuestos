@using MR.LogicaNegocio.Dtos
@model CitasDto

@{
    ViewData["Title"] = "Crear Cita";
}

<h2 class="text-center fw-bold mb-4">Crear Nueva Cita</h2>

<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Create" method="post" class="border p-4 rounded shadow bg-light">
            <div class="mb-3">
                <label asp-for="Detalle" class="form-label fw-bold"></label>
                <input asp-for="Detalle" class="form-control" />
                <span asp-validation-for="Detalle" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Fecha" class="form-label fw-bold"></label>
                <input asp-for="Fecha" type="datetime-local" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Modelo" class="form-label fw-bold"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Placa" class="form-label fw-bold"></label>
                <input asp-for="Placa" class="form-control" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Estado" class="form-label fw-bold"></label>
                <select asp-for="Estado" class="form-select">
                    <option value="0">Pendiente</option>
                    <option value="1">En Revision</option>
                    <option value="2">Finalizada</option>
                </select>
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IdUsuario" class="form-label fw-bold"></label>
                <input asp-for="IdUsuario" class="form-control" />
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success fw-bold">Guardar</button>
                <a asp-action="Index" class="btn btn-secondary fw-bold">Volver al listado</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}