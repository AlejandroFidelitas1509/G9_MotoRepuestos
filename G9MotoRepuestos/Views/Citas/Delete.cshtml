@using MR.LogicaNegocio.Dtos
@model CitasDto

@{
    ViewData["Title"] = "Eliminar Cita";
}

<h2>Eliminar Cita</h2>

<h3>¿Estás seguro que deseas eliminar esta cita?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Detalle</dt>
        <dd class="col-sm-10">@Model.Detalle</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha</dd>

        <dt class="col-sm-2">Modelo</dt>
        <dd class="col-sm-10">@Model.Modelo</dd>

        <dt class="col-sm-2">Placa</dt>
        <dd class="col-sm-10">@Model.Placa</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">
            @(Model.Estado == 0 ? "Pendiente" :
                        Model.Estado == 1 ? "Terminada" : "Cancelada")
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="IdCita" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>